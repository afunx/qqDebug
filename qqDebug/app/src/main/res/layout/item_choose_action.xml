<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xr_item"
        android:layout_width="match_parent"
        android:layout_height="166px">

    <ImageView
            android:layout_marginTop="20px"
            android:layout_marginLeft="50px"
            android:layout_centerVertical="true"
            android:id="@+id/image_icon"
            android:background="@mipmap/action_1"
            android:layout_width="80px"
            android:layout_height="80px"/>

    <LinearLayout
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_icon"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginLeft="5px"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:id="@+id/tv_action_name"
                android:text="turn right1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/xl_bottom"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_edit"
                android:background="@mipmap/list_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        <Button
                android:paddingLeft="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:id="@+id/btn_delete"
                android:background="@mipmap/list_delete"
                android:layout_width="50dp"
                android:layout_height="50dp"/>


    </LinearLayout>

</RelativeLayout>
